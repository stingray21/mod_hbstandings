<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE PUBLIC>
<extension type="module" version="1.6.0" client="site" method="install">
	<!-- Name of the Module -->
	<name>HB Standings</name> 
	<!-- Name of the Author -->
	<author>Jochen Stehle</author> 
	<!-- Version Date of the Module -->
	<creationDate>27.02.2013</creationDate> 
	<!-- Copyright information -->
	<copyright>All rights reserved by Jochen Stehle</copyright> 
	<!-- License Information -->
	<license></license> 
	<!-- Author's email address -->
	<authorEmail>handballgeislingen@gmail.com</authorEmail> 
	<!-- Author's website -->
	<authorUrl></authorUrl> 
	<!-- Module version number -->
	<version>1.0.1</version> 
	<!-- Description of what the module does -->
	<description>Provides the season standings of a team</description>
	<!-- Listing of all files that should be installed for the module to function -->
	<files>
		<!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_hbstandings">mod_hbstandings.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>css/default.css</filename>
		<filename>css/index.html</filename>
	</files>
 
	<languages>
		<!-- Any language files included with the module -->
		<language tag="de-DE">language/de-DE.mod_hbstandings.ini</language>
	</languages>
 
	<!-- Optional parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="moduleclass_sfx" 
					type="text" 
					default="" 
					label="LABEL_CLASS_SUFFIX" 
					description="DESC_MOD_SUFFIX">
				</field>
				<field 
					name="@spacer" 
					type="spacer" 
					default="" 
					label="" 
					description="">
				</field>
				<field 
					name="posLeague" 
					type="list" 
					default="above" 
					label="LABEL_MODHBSTANDINGS_POSITIONLEAGUE" 
					description="DESC_MODHBSTANDINGS_POSITIONLEAGUE">
						<option value="above">MODHBSTANDINGS_POSITIONLEAGUE_ABOVE</option>
						<option value="underneath">MODHBSTANDINGS_POSITIONLEAGUE_UNDERNEATH</option>
						<option value="not">MODHBSTANDINGS_POSITIONLEAGUE_NOT</option>
				</field>
				<field 
					name="headline" 
					type="list" 
					default="above" 
					label="LABEL_MODHBSTANDINGS_HEADLINE" 
					description="DESC_MODHBSTANDINGS_HEADLINE">
						<option value="title">MODHBSTANDINGS_HEADLINE_TITLE</option>
						<option value="titleandteam">MODHBSTANDINGS_HEADLINE_TITLEANDTEAM</option>
						<option value="not">MODHBSTANDINGS_HEADLINE_NOT</option>
				</field>
				<field 
					name="highlighthometeam" 
					type="radio" 
					default="1" 
					label="LABEL_MODHBSTANDINGS_HIGHLIGHTHOMETEAM" 
					description="DESC_MODHBSTANDINGS_HIGHLIGHTHOMETEAM">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>